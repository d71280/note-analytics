{
  "openapi": "3.0.0",
  "info": {
    "title": "Note Analytics API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://note-analytics.vercel.app"
    }
  ],
  "paths": {
    "/api/gpts/receive-note": {
      "post": {
        "summary": "Send content to Note",
        "operationId": "sendToNote",
        "x-openai-isConsequential": false,
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["content"],
                "properties": {
                  "content": {
                    "type": "string",
                    "description": "Article content (minimum 500 characters)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}