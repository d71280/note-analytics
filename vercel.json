{
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/cron/process-posts",
      "schedule": "*/5 * * * *"
    }
  ]
}